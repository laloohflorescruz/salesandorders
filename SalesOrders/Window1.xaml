<Window x:Class="SalesOrders.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Foreground="Azure" Background="#404040" Height="500" Width="500">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Black" Offset="0.0"/>
                <GradientStop Color="#505050" Offset="0.5"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Name="txtblk1" Foreground="Azure" Background="#30303000" Width="250" Height="30" VerticalAlignment="Top" Margin="10,20,0,0" TextAlignment="Center"/>
        <TextBlock Name="txtblk2" Foreground="Azure" Background="#00000000"  Margin="20,70,0,0"  />
    </Grid>
</Window>
